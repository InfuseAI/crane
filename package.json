{
  "name": "crane",
  "productName": "Crane",
  "author": "InfuseAI",
  "description": "Crane is a easy-to-use and beautiful desktop application helps you build manage your docker images.",
  "version": "1.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.4.16",
    "@craco/craco": "^6.3.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/dockerode": "^3.2.7",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/node-ipc": "^9.1.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.3.0",
    "antd": "^4.16.13",
    "aws-sdk": "^2.1030.0",
    "axios": "^0.22.0",
    "craco-less": "^1.20.0",
    "dockerode": "^3.3.1",
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "filesize": "^8.0.3",
    "graphql": "^15.6.1",
    "keytar": "^7.7.0",
    "lodash": "^4.17.21",
    "node-ipc": "^9.1.3",
    "parse-markdown-table": "^0.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-lazylog": "^4.5.3",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "timeago.js": "^4.0.2",
    "typescript": "^4.1.2",
    "uuid": "^8.3.1",
    "web-vitals": "^1.0.1"
  },
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "clean": "rm -rf dist && rm -rf build",
    "dev": "yarn start",
    "start": "yarn build:electron && concurrently -k -n webpack,tsc,electron \"cross-env BROWSER=none PORT=16888 yarn craco start\" \"yarn build:electron:watch\" \"yarn electron\"",
    "test": "craco test",
    "format": "prettier --write",
    "build": "yarn build:craco && yarn build:electron",
    "release": "yarn clean && yarn build && yarn make",
    "electron": "wait-on tcp:16888 && electron-forge start",
    "build:electron": "tsc --project tsconfig.electron.json",
    "build:electron:watch": "tsc --watch --project tsconfig.electron.json",
    "build:craco": "craco build",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@electron-forge/publisher-github": "^6.0.0-beta.61",
    "circular-dependency-plugin": "^5.2.2",
    "concurrently": "^6.2.1",
    "craco-esbuild": "^0.4.1",
    "cross-env": "^7.0.3",
    "electron": "^15.0.0",
    "prettier": "2.4.1",
    "simple-progress-webpack-plugin": "^2.0.0",
    "wait-on": "^6.0.0",
    "webpackbar": "^5.0.0-3"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!antd|@ant-design|rc-.+?|@babel/runtime).+(js|jsx)$"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "icon": "./src/images/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "InfuseAI",
              "name": "Crane"
            }
          }
        }
      ]
    }
  }
}
